<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@drawable/menu</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
    </style>

    <style name="date_picker" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/color_edit_text</item>
        <item name="android:textColorPrimary">@color/color_edit_text</item>
    </style>

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="MyAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">@style/MyTextAppearance</item>
        <item name="android:textViewStyle">@style/MyTextAppearance</item>
    </style>
    <style name="MyText" >
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="MyTextAppearance" parent="MyAppTheme">
        <item name="android:padding">5dp</item>
    </style>
    <style name="MyEditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/background_edit_text</item>
        <item name="android:textColor">@color/color_edit_text</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@drawable/color_item_popup</item>
    </style>

    <style name="SpinnerTheme" parent="itemTextStyle.AppTheme">
        <item name="android:background">@color/redBorderDark</item>
    </style>

</resources>
